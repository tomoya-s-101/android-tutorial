<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.axiaworks.tutorial">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".TutorialApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme"
        tools:targetApi="m">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".layout.Tutorial2Activity"/>
        <activity android:name=".adapter.Tutorial3Activity"/>
        <activity android:name=".adapter.Tutorial3ExActivity"/>
        <activity android:name=".library.Tutorial4Activity"/>
        <activity android:name=".library.Tutorial4ExActivity"/>
        <activity android:name=".fragment.Tutorial5Activity"/>
        <activity android:name=".mvvm.Tutorial6Activity" />
        <activity android:name=".mvvm.Tutorial6ExActivity"/>

    </application>

</manifest>